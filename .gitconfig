[branch]
	sort = -committerdate
[color]
	ui = auto
[column]
	ui = auto
[commit]
	gpgsign = true
[core]
	editor = /opt/homebrew/bin/vim
	ignorecase = false
  excludesfile = "~/.gitignore"
[gpg]
	format = ssh
[init]
	defaultBranch = master
[pager]
	branch = false
[push]
	autoSetupRemote = true
[rerere]
	enabled = true
[user]
	email = mark@remarkablemark.org
	name = Mark
	signingkey = "~/.ssh/id_rsa.pub"
